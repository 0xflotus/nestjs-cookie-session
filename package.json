{
  "name": "nestjs-cookie-session",
  "version": "0.0.1",
  "description": "Idiomatic NestJS module for cookie session",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --verbose",
    "build": "rm -rf ./dist && tsc --p tsconfig.build.json",
    "report": "cat ./coverage/lcov.info | coveralls",
    "example": "ts-node example/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamolegga/nestjs-cookie-session.git"
  },
  "keywords": [
    "nest",
    "nestjs",
    "nest.js",
    "session",
    "cookie",
    "cookie-session"
  ],
  "author": "Oleg Repin <iamolegga@gmail.com> (http://github.com/iamolegga)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamolegga/nestjs-cookie-session/issues"
  },
  "homepage": "https://github.com/iamolegga/nestjs-cookie-session#readme",
  "dependencies": {
    "@types/cookie-session": "^2.0.37",
    "cookie-session": "^1.3.3"
  },
  "devDependencies": {
    "@nestjs/common": "^6.8.3",
    "@nestjs/core": "^6.8.3",
    "@nestjs/platform-express": "^6.8.3",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.7.12",
    "coveralls": "^3.0.7",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testEnvironment": "node"
  }
}
